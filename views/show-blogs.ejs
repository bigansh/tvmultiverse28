<html>
	<head>
		<!-- Link -->
		<%- include("partials/linkandscript") %>
		<link rel="stylesheet" href="/blogs/css/showblogs.css" />
		<!-- End Link -->

		<!-- META -->
		<%- include("partials/meta") %>
		<meta property="og:image" content="<%= image %>" />
		<meta property="og:title" content="<%= category %> by MULTIVERSE TV" />
		<!-- End META -->

		<title><%= category %> by MULTIVERSE TV</title>
	</head>
	<body>
		<!-- Navbar -->
		<%- include("partials/navbar") %>
		<!-- End Navbar -->

		<div class="container my-5">
			<table style="border-radius: 5px">
				<tr style="width: 100%">
					<td>
						<div class="black-card">
							<div class="row">
								<% blogs.forEach(function(blog){ %>
								<div
									class="col-lg-4 portfolio-item"
									style="margin-bottom: 1.7em"
								>
									<div
										class="card h-100 text-white"
										style="background: #1f1f1f"
									>
										<a href="/blogs/<%= urlCat %>/<%= blog._id %>">
											<img
												class="card-img-top embed-responsive-item"
												src="<%= blog.image %>"
												alt=""
											/>
										</a>
										<div class="card-body d-flex flex-column">
											<h4 class="card-title">
												<a
													href="/blogs/<%= urlCat %>/<%= blog._id %>"
													style="color: white"
												>
													<%= blog.title %>
												</a>
											</h4>
											<p
												class="card-subtitle mb-4 text-muted"
												style="font-size: 14px"
											>
												<strong>Published on:</strong> <%=
												blog.created.toDateString() %>
											</p>
											<a
												href="/blogs/<%= urlCat %>/<%= blog._id %>"
												style="background-color: #3b776b"
												class="btn mt-auto"
												>Read More</a
											>
										</div>
									</div>
								</div>
								<% }) %>
							</div>
						</div>
					</td>
				</tr>
			</table>
		</div>
	</body>
	<%- include("partials/footerscript") %>
</html>
